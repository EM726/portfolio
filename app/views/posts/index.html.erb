<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>投稿</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.user_name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        
        <td><%= link_to '閲覧', post %></td>
        <% if user_signed_in? && current_user.id == post.user_id %>
          <td><%= link_to '編集', edit_post_path(post) %></td>
          <td><%= link_to '消去', post, method: :delete, data: { confirm: '投稿を削除しますか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '投稿する', new_post_path %>
